<section class="section">
  {{#if success}}
    <div class="notification is-success">Updated user!</div>
  {{/if}}

  {{#if data}}
    <table class="table is-hoverable is-fullwidth">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>E-mail</th>
          <th>Admin?</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        {{#each data}}
          <tr>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.email}}</td>
            <td>{{#if this.isAdmin}}ADMIN{{/if}}</td>
            <td>
              <a class="button is-link" href="/users/edit/{{this.id}}">Edit</a>
              <a
                class="button is-info"
                href="/manageorders?user={{this.email}}"
              >Manage Orders</a>
              <a
                class="button is-danger"
                href="/users/delete/{{this.id}}"
              >Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <div class="notification is-warning">No Users found ... Go do some
      marketing!</div>
  {{/if}}
</section>