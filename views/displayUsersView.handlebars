{{#if success}}
  <h2>Updated user!</h2>
{{/if}}

<div>
  <div class="table-responsive">
    <table class="table table-condensed">
      {{#if data}}
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>E-mail</th>
            <th>Admin?</th>
            <th></th>
          </tr>
        </thead>
      {{else}}
        <tr><td colspan="3">No Users found ... Go do some marketing!</td></tr>
      {{/if}}
      <tbody>
        {{#each data}}
          <tr>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.email}}</td>
            <td>{{#if this.isAdmin}}ADMIN{{/if}}</td>
            <td>
              <a href="/users/edit/{{this.id}}">Edit</a>
              |
              <a href="/users/delete/{{this.id}}">Delete</a>
              |
              <a href="/manageorders?user={{this.email}}">Manage Orders</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>