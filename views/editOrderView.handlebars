{{#if problem}}
  <h2>There was a problem editing the order. Please try again.</h2>
{{/if}}
<div class="table-responsive">
  <form method="post" action="/manageorders/edit">
    <table class="table table-condensed">
      <tbody>
        <tr>
          <th>Order ID:</th>
          <td>{{data.id}}</td>
        </tr>
        <tr>
          <th>Date:</th>
          <td>{{data.date}}</td>
        </tr>
        <tr>
          <th>User:</th>
          <td>{{data.username}}</td>
        </tr>
        <tr>
          <th>SKU:</th>
          <td><input
              type="text"
              name="sku"
              required
              value="{{data.sku}}"
            /></td>
        </tr>
        <tr>
          <th>Quantity:</th>
          <td><input
              type="number"
              name="quantity"
              required
              value="{{data.quantity}}"
            /></td>
        </tr>
        <tr>
          <th>Total:</th>
          <td><input
              type="number"
              name="total"
              step="0.01"
              required
              value="{{data.total}}"
            /></td>
        </tr>
        <input type="hidden" name="id" value="{{data.id}}" />
      </tbody>
      <tfooter>
        <tr>
          <td></td>
          <td>
            <input type="submit" value="Save" class="btn btn-success" />
            <input
              type="button"
              value="Cancel"
              class="btn btn-danger"
              onclick="history.back()"
            />
          </td>
        </tr>
      </tfooter>
    </table>
  </form>
</div>