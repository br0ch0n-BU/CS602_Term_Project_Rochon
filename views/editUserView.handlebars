{{#if problem}}
  <h2>There was a problem editing the user. Please try again.</h2>
{{/if}}
<section class="section">
    <h3 class="title is-3">{{title}}</h3>

  <form method="post" action="/users/edit">
    <table class="table">
      <tbody>

        <tr>
          <th>First Name: </th>
          <td><input
              type="text"
              name="fname"
              required
              value="{{data.firstName}}"
            /></td>
        </tr>
        <tr>
          <th>Last Name: </th>
          <td><input
              type="text"
              name="lname"
              required
              value="{{data.lastName}}"
            /></td>
        </tr>
        <tr>
          <th>E-mail: </th>
          <td><input
              type="email"
              name="email"
              required
              value="{{data.email}}"
            /></td>
        </tr>
        <tr>
          <th>Admin?: </th>
          <td><input
              type="checkbox"
              name="isAdmin"
              value="true"
              {{#if data.isAdmin}}
              checked
              {{/if}}
            /></td>
        </tr>
        <tr>
          <th>Password: </th>
          <td><input type="password" name="password" placeholder="Enter new password if needed"/></td>
        </tr>
        <input type="hidden" name="id" value="{{data.id}}" />
      </tbody>
      <tfooter>
        <tr>
          <td></td>
          <td>
            <input type="submit" value="Save" class="button is-success" />
            <input
              type="button"
              value="Cancel"
              class="button is-danger"
              onclick="location.href='/users'"
            />
          </td>
        </tr>
      </tfooter>
    </table>
  </form>
</section>