<section class="section">
  <h3 class="title is-3">{{title}}</h3>

  <form method="post" action="/users/delete">
    <table class="table table-condensed">
      <tbody>
        <tr>
          <th>First Name:</th>
          <td>{{data.firstName}}</td>
        </tr>
        <tr>
          <th>Last Name: </th>
          <td>{{data.lastName}}</td>
        </tr>
        <tr>
          <th>E-mail: </th>
          <td>{{data.email}}</td>
        </tr>
        <input type="hidden" name="id" value="{{data.id}}" />

      </tbody>
      <tfooter>
        <tr>
          <td></td>
          <td>
            <input type="submit" value="OK" class="button is-success" />
            <input
              type="button"
              value="Cancel"
              class="button is-danger"
              class="cancel"
              onclick="location.href='/users'"
            />
          </td>
        </tr>
      </tfooter>
    </table>
  </form>
</section>