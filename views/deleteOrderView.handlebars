<div class="table-responsive">
  <form method="post" action='/manageorders/delete'>
    <table class="table table-condensed">
      <tbody>
        <tr>
          <th>Order ID:</th>
          <td>{{data.id}}</td>
        </tr>
        <tr>
          <th>Date: </th>
          <td>{{data.date}}</td>
        </tr>
        <tr>
          <th>SKU:</th>
          <td>{{data.sku}}</td>
        </tr>
        <tr>
          <th>User:</th>
          <td>{{data.username}}</td>
        </tr>
        <tr>
          <th>Quantity:</th>
          <td>{{data.quantity}}</td>
        </tr>
        <tr>
          <th>Total:</th>
          <td>{{data.total}}</td>
        </tr>
        <input type="hidden" name="id" value="{{data.id}}">
       
      </tbody>
      <tfooter>
        <tr>
          <td></td>
          <td>
              <input type="submit" value="OK" class="btn btn-success">
              <input type="button" value="Cancel" class="btn btn-danger"
                  class="cancel" onclick="history.back()">
          </td>
        </tr>
      </tfooter>
    </table>
  </form>
</div>
