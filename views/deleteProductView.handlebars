<section class="section">
  <h3 class="title is-3">{{title}}</h3>
  <form method="post" action="/products/delete">
    <table class="table">
      <tbody>
        <tr>
          <th>SKU:</th>
          <td>{{data.sku}}</td>
        </tr>
        <tr>
          <th>Description: </th>
          <td>{{data.description}}</td>
        </tr>
        <input type="hidden" name="id" value="{{data.id}}" />

      </tbody>
      <tfooter>
        <tr>
          <td></td>
          <td>
            <input type="submit" value="OK" class="button is-success" />
            <input
              type="button"
              value="Cancel"
              class="button is-danger"
              class="cancel"
              onclick="cancelDelete()"
            />
          </td>
        </tr>
      </tfooter>
    </table>
  </form>
</section>