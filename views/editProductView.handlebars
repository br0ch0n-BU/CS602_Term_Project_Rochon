<section class="section">
  <form method="post" action="/products/edit">
    <div class="field">
      <label class="label">SKU: </label>
      <input
        class="input"
        type="text"
        name="sku"
        required
        value="{{data.sku}}"
      />
    </div>
    <div class="field">
      <label class="label">Description: </label>
      <input
        class="input"
        type="text"
        name="description"
        required
        value="{{data.description}}"
      />
    </div>
    <div class="field">
      <label class="label">Price: </label>
      <input
        class="input"
        type="number"
        step="0.01"
        name="price"
        required
        value="{{data.price}}"
      />
    </div>
    <div class="field">
      <label class="label">Quantity: </label>
      <input
        class="input"
        type="number"
        name="quantity"
        required
        value="{{data.quantity}}"
      />
    </div>
    <div class="field">
      <label class="label">Image path (optional): </label>
      <input
        class="input"
        type="text"
        name="imagePath"
        value="{{data.image}}"
      />
    </div>
    <input type="hidden" name="id" value="{{data.id}}" />

    <div class="field">
      <input type="submit" value="Save" class="button is-success" />
      <input
        type="button"
        value="Cancel"
        class="button is-danger"
        onclick="cancelAdd()"
      />
    </div>
  </form>
</section>